{
  "name": "openreel",
  "version": "0.1.0",
  "private": true,
  "description": "Professional video, audio, and photo editing in your browser",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @openreel/web dev",
    "build": "pnpm --filter @openreel/web build",
    "preview": "pnpm --filter @openreel/web preview",
    "deploy": "pnpm build && pnpm --filter @openreel/web deploy",
    "deploy:preview": "pnpm build && pnpm --filter @openreel/web deploy:preview",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "claude:help": "cat scripts/claude-review.md",
    "issues": "gh issue list --label needs-claude-review",
    "prs": "gh pr list --label needs-claude-review"
  },
  "keywords": [
    "video-editor",
    "audio-editor",
    "browser-based",
    "webcodecs",
    "webgpu",
    "react",
    "typescript",
    "open-source",
    "video-editing",
    "timeline",
    "color-grading",
    "export"
  ],
  "author": "Augustus Otu and Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/augani/openreel.git"
  },
  "bugs": {
    "url": "https://github.com/augani/openreel/issues"
  },
  "homepage": "https://openreel.video",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "mediabunny": "^1.25.3"
  }
}
